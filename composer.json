{
    "name": "steffenbrem/json-api-bundle",
    "description": "Integration of JSON API with Symfony2 using JMS Serializer (FOSRestBundle).",
    "keywords": [
        "rest",
        "jsonapi",
        "json-api"
    ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Steffen Brem",
            "email": "steffenbrem@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "symfony/framework-bundle": "~2.3",
        "jms/serializer-bundle": "~0.13",
        "pagerfanta/pagerfanta": "~1.0",
        "willdurand/hateoas": "~2.8"
    },
    "require-dev": {
        "symfony/expression-language": "~2.4",
        "twig/twig": "~1.12"
    },
    "autoload": {
        "psr-0": {
            "Mango\\Bundle\\JsonApiBundle": ""
        }
    },
    "target-dir": "Mango/Bundle/JsonApiBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
