<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="json_api.listener.json_event_subcriber.class">Mango\Bundle\JsonApiBundle\EventListener\Serializer\JsonEventSubscriber</parameter>
        <parameter key="json_api.metadata.annotation_driver.class">Mango\Bundle\JsonApiBundle\Configuration\Metadata\Driver\AnnotationDriver</parameter>
    </parameters>

    <services>

        <service id="json_api.metadata.annotation_driver" class="%json_api.metadata.annotation_driver.class%" public="false">
            <argument type="service" id="annotations.reader"/>
        </service>

        <service id="json_api.metadata.chain_driver" class="%jms_serializer.metadata.chain_driver.class%" public="false">
            <argument type="collection">
                <argument type="service" id="json_api.metadata.annotation_driver"/>
            </argument>
        </service>

        <service id="json_api.metadata.cache.file_cache" class="%jms_serializer.metadata.cache.file_cache.class%" public="false">
            <argument></argument> <!-- Cache directory -->
        </service>

        <service id="json_api.metadata.cache" alias="json_api.metadata.cache.file_cache" public="false"/>

        <service id="json_api.metadata_factory" class="%jms_serializer.metadata.metadata_factory.class%" public="false">
            <argument type="service" id="json_api.metadata.chain_driver"/>
            <argument>Metadata\ClassHierarchyMetadata</argument>
            <argument>%kernel.debug%</argument>
            <!--<call method="setCache">-->
                <!--<argument type="service" id="hateoas.metadata.cache" on-invalid="ignore"/>-->
            <!--</call>-->
        </service>

        <service id="json_api.serializer.relationship_exclusion_strategy" class="Mango\Bundle\JsonApiBundle\Serializer\Exclusion\RelationshipExclusionStrategy">
            <argument type="service" id="json_api.metadata_factory" />
        </service>

    </services>

</container>